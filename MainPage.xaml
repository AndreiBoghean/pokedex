<Page x:Class="pokedex.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pokedex"
      mc:Ignorable="d"
      Title="MainPage">

    <StackPanel>

        <Menu>
            <MenuItem x:Name="Minimise" Header="minimise" Background="Orange" Margin="400, 0, 0, 0" Width="60"/>
            <MenuItem x:Name="Close" Header="close"       Background="Red"    Margin="0, 0, 0, 0" Width="40"/>
        </Menu>
        <Button Content="test" Background="HotPink"/>

        <Frame x:Name="TestFrame"/>


    </StackPanel>
</Page>
